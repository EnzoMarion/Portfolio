generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Portfolio {
  id         BigInt   @id @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  password  String
  role      String     @default("user")
  createdAt DateTime   @default(now())
  pseudo    String     @unique
  messages  Message[]
  reactions Reaction[]
}

model Project {
  id          String     @id @default(uuid())
  title       String
  description String
  imageUrl    String
  createdAt   DateTime   @default(now())
  moreUrl     String?
  reactions   Reaction[] @relation("ProjectReactions")
  messages    Message[]
}

model News {
  id        String     @id @default(uuid())
  title     String
  content   String
  createdAt DateTime   @default(now())
  reactions Reaction[] @relation("NewsReactions")
}

model Message {
  id        String   @id @default(uuid())
  content   String
  userId    String
  projectId String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  project   Project @relation(fields: [projectId], references: [id])
}

model Reaction {
  id        String   @id @default(uuid())
  userId    String
  projectId String?
  newsId    String?
  createdAt DateTime @default(now())
  news      News?    @relation("NewsReactions", fields: [newsId], references: [id])
  project   Project? @relation("ProjectReactions", fields: [projectId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}
